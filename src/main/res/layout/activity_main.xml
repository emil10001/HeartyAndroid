<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:orientation="vertical"
		tools:context="io.hearty.android.app.MainActivity">

	<fragment
			android:id="@+id/hrm_frag"
			android:name="io.hearty.android.app.HrmFrag"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:layout="@layout/hrm"/>

	<fragment
			android:id="@+id/steps_frag"
			android:name="io.hearty.android.app.StepsFrag"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:layout="@layout/steps"/>

	<fragment
			android:id="@+id/activities"
			android:name="io.hearty.android.app.ActivitiesFrag"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:layout="@layout/activities"/>

</LinearLayout>
